<div class="row">
  <div class="w-50 col-md-12 mx-auto">
    <h2 id="page-title">Login</h2>
    <form class="form login-form">
      <div class="form-group">
        <label for="username-login">Username:</label>
        <input class="form-input" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group d-grid gap-2 d-md-flex justify-content-md-end">
        <button id="login" class="btn" type="submit">Login</button>
      </div>
    </form>
    <div>
      <a href="/signup">Not already a member? Click here to register for an account!</a>
    </div>
  </div>

  <script src="./js/login.js"></script>